<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.transcendence.gangoffour">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GangOfFour"
        tools:targetApi="31">
        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="._01_creational.CreationalMainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="._01_creational.singleton.SingletonMainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="._01_creational.factory.factorymethod.FactoryMethodShapeActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name="._02_structural.MainStructuralActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="._03_behavioral.MainBehavioralActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>